{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules","dist","build"
    ],
}